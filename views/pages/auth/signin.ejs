<%- include('../../partials/header.ejs') %> 

    <div>
        <div class="container">
            <div class="card my-2">
                <div class="card-body">
                    <h5>Signin User</h5>
                    <form action="/auth/signin" method="POST">
                        <div class="form-group">
                            <label for="email">Enter Email</label>
                            <input type="email" name="email" id="email" class="form-control <%= error.email? 'is-invalid':'' %>">
                            <div class="invalid-feedback">
                                <%= error.email && error.email %> 
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">Enter Password</label>
                            <input type="password" name="password" id="password" class="form-control <%= error.password?'is-invalid' : '' %>">
                            <div class="invalid-feedback">
                                <%= error.password && error.password %> 
                            </div>
                        </div>

                        <button class="btn btn-primary">Sign In</button>
                        <p class="text-center">Don't have an account? <a href="/auth/signup">SignUp Here</a></p>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer.ejs') %> 

    </body>
</html>