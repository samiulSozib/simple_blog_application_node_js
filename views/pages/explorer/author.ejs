<%- include('../../partials/header.ejs') %>

<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <div>
                    <img src="<%= author.profilePics %> " alt="" class="img-thumbnail img-fluid">
                </div>
                <div class="mx-3">
                    <p>Name: <strong><%= author.profile.name %> </strong></p>
                    <p>Title: <strong><%= author.profile.title %> </strong></p>
                    <p>Bio: <%= author.profile.bio %></p>

                    <div>
                        Social Links: 
                        <% if(author.profile.links.website){  %>
                            <span>
                                <a href="<%= author.profile.links.website %>" target="_blank">
                                    <i class="fab fa-internet-explorer"></i>
                                </a>
                            </span>
                        <% } %> 
                        <% if(author.profile.links.facebook){  %>
                            <span>
                                <a href="<%= author.profile.links.facebook %>" target="_blank">
                                    <i class="fab fa-facebook-square"></i>
                                </a>
                            </span>
                        <% } %> 
                        <% if(author.profile.links.twitter){  %>
                            <span>
                                <a href="<%= author.profile.links.twitter %>" target="_blank">
                                    <i class="fab fa-twitter-square"></i>
                                </a>
                            </span>
                        <% } %> 
                        <% if(author.profile.links.github){  %>
                            <span>
                                <a href="<%= author.profile.links.github %>" target="_blank">
                                    <i class="fab fa-github-square"></i>
                                </a>
                            </span>
                        <% } %>  
                    </div>

                    <div class="mt-5">
                        Post Created by: <%= author.username %>
                        <% if(author.profile.posts.length==0){ %>
                            <p class="text-center text-muted">There is no posts</p>
                        <% }else{ %>
                            <% for(let post of author.profile.posts){ %>
                                <div class="card card-body my-2">
                                <% if(post.thumbnail){ %>
                                    <img src="<%= post.thumbnail %> " alt="post thumbnail" class="img-thumbnail img-fluid">
                                <% } %>
                                <a href="/explorer/<%= post._id %> "><%= post.title %> </a>
                                </div>
                            <% } %>  
                        <% } %>   
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %> 


</body>
</html>