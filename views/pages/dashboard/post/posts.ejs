<%- include('../../../partials/header.ejs') %>

<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-body">
                <h3>List of My Posts</h3>
                <div class="row">
                    <% if(posts.length==0){ %>
                        <div class="text-center text-muted">
                            <p>There is no post available</p>
                            <a href="/posts/create" class="btn btn-primary btn-sm">Create Post</a>
                        </div>
                    <% } else{%>
                        <% for(let post of posts.reverse()){ %>
                            <div class="card col-sm-3 m-3">
                                <% if(post.thumbnail){ %>
                                    <img src="<%= post.thumbnail  %> " alt="<% post.title %> " class="card-img-top mt-3">
                                <% } %>  
                                <div class="card-body">
                                    <a href="/posts/edit/<%= post._id  %>" style="color: #222222;">
                                        <h5><%= post.title %> </h5>
                                    </a>
                                    <p><%= post.createdAt %> </p>
                                </div>
                            </div>
                        <% } %>  
                    <% } %>  
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('../../../partials/footer.ejs') %>


</body>
</html>